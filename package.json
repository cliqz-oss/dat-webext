{
  "name": "dat-webext",
  "version": "0.0.15",
  "description": "",
  "scripts": {
    "build:test": "browserify -r fs:graceful-fs -e test/test.ts -p tsify -g @sammacbeth/libdwebify > test/test-bundle.js && browserify -e ./web-api/web-api.js > test/web-api.js",
    "test": "npm run build:test && tape-ext ./test/manifest.json",
    "build": "npm run build:background && npm run build:webapi",
    "build:background": "browserify -r fs:graceful-fs -e background/index.ts -p tsify -g @sammacbeth/libdwebify > addon/background.js",
    "build:webapi": "browserify -e ./web-api/web-api.js > addon/web-api.js",
    "start": "cross-env MOZ_DISABLE_CONTENT_SANDBOX=1 web-ext run -s addon --firefox=firefoxdeveloperedition --no-reload -u about:debugging",
    "postinstall": "bash ./postinstall.sh",
    "package": "web-ext build -s ./addon/",
    "version": "node update_version.js && git add addon/manifest.json"
  },
  "author": "Sam Macbeth",
  "license": "MIT",
  "dependencies": {
    "@cliqz-oss/dexie": "^2.0.4",
    "@geut/discovery-swarm-webrtc": "^2.2.3",
    "@sammacbeth/dat-api-v1wrtc": "0.0.2",
    "@sammacbeth/dat-archive": "0.0.2",
    "@sammacbeth/dat-node": "1.0.3",
    "@sammacbeth/dat-protocol-handler": "0.0.2",
    "@sammacbeth/dat-types": "0.0.2",
    "@sammacbeth/libdweb": "0.0.8",
    "@sammacbeth/utp-wasm": "^1.1.5",
    "base64-js": "^1.3.1",
    "bulma": "^0.7.5",
    "dat-dns": "^4.1.0",
    "hypercore-crypto": "^1.0.0",
    "hyperdiscovery": "^10.1.0",
    "hyperdrive": "^9.15.0",
    "mime": "^2.4.4",
    "parse-dat-url": "^3.0.3",
    "pauls-dat-api": "^8.1.0",
    "random-access-idb": "^1.2.1",
    "random-access-idb-mutable-file": "^0.3.0",
    "random-access-memory": "^3.1.1",
    "spanan": "^2.1.0",
    "stream-to-async-iterator": "^0.2.0",
    "web-ext": "^3.2.0"
  },
  "devDependencies": {
    "@sammacbeth/libdwebify": "^1.0.0",
    "@sammacbeth/tape-ext": "0.5.1",
    "@sammacbeth/types": "^1.1.1",
    "@types/node": "^12.11.1",
    "browserify": "^16.5.0",
    "cross-env": "^6.0.3",
    "tsify": "^4.0.1",
    "typescript": "^3.6.3",
    "web-ext-types": "^3.2.1"
  }
}
