{
  "name": "dat-webext",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "build:test": "webextify -r fs:graceful-fs -e test/test.js > test/test-bundle.js",
    "test": "tape-ext ./test/manifest.json",
    "build": "npm run build:background && npm run build:webapi",
    "build:background": "webextify -r fs:graceful-fs -e background/index.js > addon/background.js",
    "build:webapi": "browserify -e ./web-api/web-api.js > addon/web-api.js",
    "start": "env MOZ_DISABLE_CONTENT_SANDBOX=1 web-ext run -s addon --firefox=firefoxdeveloperedition --no-reload",
    "postinstall": "./copy-assets.sh"
  },
  "author": "Sam Macbeth",
  "license": "MIT",
  "dependencies": {
    "@sammacbeth/dat-archive-web": "1.1.2",
    "@sammacbeth/libdweb": "0.0.2",
    "@sammacbeth/random-access-idb-mutable-file": "^0.1.1",
    "@sammacbeth/webextify": "16.2.4",
    "base64-js": "^1.3.0",
    "bootstrap": "^4.1.3",
    "browserify": "^16.2.2",
    "hypercore-protocol": "^6.6.4",
    "hyperdrive": "^9.14.0",
    "mime": "^2.3.1",
    "parse-dat-url": "^3.0.1",
    "pump": "^3.0.0",
    "random-access-idb": "^1.0.4",
    "random-access-memory": "^3.0.0",
    "spanan": "^2.1.0",
    "stream-to-async-iterator": "^0.2.0",
    "web-ext": "^2.7.0",
    "websocket-stream": "^5.1.2"
  },
  "devDependencies": {
    "tape-ext": "^0.5.1"
  }
}
