{
    "manifest_version": 2,
    "name": "Dat Protocol",
    "version": "0.0.1",
    "applications": {
        "gecko": {
            "id": "dat@cliqz.com"
        }
    },
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": [
        "storage",
        "unlimitedStorage"
    ],
    "experiment_apis": {
        "protocol": {
            "schema": "libdweb/protocol/protocol.json",
            "child": {
                "scopes": ["addon_child"],
                "paths": [["protocol"]],
                "script": "libdweb/protocol/client.js"
            },
            "parent": {
                "events": ["startup"],
                "scopes": ["addon_parent"],
                "paths": [["protocol"]],
                "script": "libdweb/protocol/host.js"
            }
        },
        "processScript": {
            "schema": "processScript/schema.json",
            "parent": {
                "scopes": ["addon_parent"],
                "paths": [["processScript"]],
                "script": "processScript/host.js"
            }
        },
        "TCPSocket": {
            "schema": "libdweb/TCPSocket/TCPSocket.json",
            "child": {
                "scopes": ["addon_child"],
                "paths": [["TCPSocket"]],
                "script": "libdweb/TCPSocket/Socket.js"
            }
        },
        "ServiceDiscovery": {
            "schema": "libdweb/ServiceDiscovery/ServiceDiscovery.json",
            "child": {
                "scopes": ["addon_child"],
                "paths": [["ServiceDiscovery"]],
                "script": "libdweb/ServiceDiscovery/client.js"
            },
            "parent": {
                "scopes": ["addon_parent"],
                "paths": [["ServiceDiscovery"]],
                "script": "libdweb/ServiceDiscovery/host.js"
            }
        },
        "UDPSocket": {
            "schema": "libdweb/UDPSocket/UDPSocket.json",
            "child": {
              "scopes": ["addon_child"],
              "paths": [["UDPSocket"]],
              "script": "libdweb/UDPSocket/Socket.js"
            }
        },
        "DNS": {
            "schema": "libdweb/dns/dns.json",
            "parent": {
              "scopes": ["addon_parent"],
              "paths": [["DNS"]],
              "script": "libdweb/dns/dns.js"
            }
        }
    }
}
