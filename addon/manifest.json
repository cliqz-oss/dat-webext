{
    "manifest_version": 2,
    "name": "Dat Protocol",
    "version": "0.0.1",
    "applications": {
        "gecko": {
            "id": "dat@cliqz.com"
        }
    },
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": [
        "storage",
        "unlimitedStorage"
    ],
    "experiment_apis": {
        "protocol": {
            "schema": "libdweb/protocol/protocol.json",
            "child": {
                "scopes": ["addon_child"],
                "paths": [["protocol"]],
                "script": "libdweb/protocol/client.js"
            },
            "parent": {
                "events": ["startup"],
                "scopes": ["addon_parent"],
                "paths": [["protocol"]],
                "script": "libdweb/protocol/host.js"
            }
        },
        "processScript": {
            "schema": "processScript/schema.json",
            "parent": {
                "scopes": ["addon_parent"],
                "paths": [["processScript"]],
                "script": "processScript/host.js"
            }
        }
    }
}
